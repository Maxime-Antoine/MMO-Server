{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict":[
            "error",
            "safe"
        ],
        "indent": [ 
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error",
            { "skipBlankLines": false }
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            { "vars": "all" }
        ],
        "no-alert": [
            "warn"
        ],
        "no-lone-blocks": [
            "error"
        ],
        "comma-spacing": [
            "error",
            { 
                "before": false,
                "after": true
            }
        ],
        "no-console": 0
    }
}